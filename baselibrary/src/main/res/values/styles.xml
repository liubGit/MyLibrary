<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LibUiNewButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibUiCancelButton" parent="LibUiNewButtonStyle">
        <item name="android:background">@drawable/btn_gray_3_0</item>
        <item name="android:textColor">@color/text_content_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LibUiAcceptButton" parent="LibUiNewButtonStyle">
        <item name="android:background">@drawable/btn_gray_3_0</item>
        <item name="android:textColor">@color/text_sure_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>